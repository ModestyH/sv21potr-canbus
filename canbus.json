                {"name":"terminal_status",    "type":"uint8_t", "start": -, "length": 2, "values": "status", "getters": ["hmi", "com"], "comment": "status of the terminal"},
                {"name":"log_manager_status", "type":"uint8_t", "start": -, "length": 2, "values": "status", "getters": ["hmi", "com"], "comment": "status of the log manager"},
                {"name":"sd_card_free_space", "type":"uint8_t", "start": -, "length": 7, "values": [0, 100],  "getters": ["hmi", "com"], "comment": "Free space on the SD card in percent"}

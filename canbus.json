                {"name":"rtc_day",            "type":"uint8_t", "start": -, "length": 5, "values": [1, 31],   "getters": ["hmi", "com"], "comment": "Day of the rtc"},
                {"name":"rtc_hour",           "type":"uint8_t", "start": -, "length": 5, "values": [0, 23],   "getters": ["hmi", "com"], "comment": "Hour of the rtc"},
                {"name":"rtc_minutes",        "type":"uint8_t", "start": -, "length": 6, "values": [0, 59],   "getters": ["hmi", "com"], "comment": "Minutes of the rtc"},
                {"name":"rtc_seconds",        "type":"uint8_t", "start": -, "length": 6, "values": [0, 59],   "getters": ["hmi", "com"], "comment": "Seconds of the rtc"},
                {"name":"esp32_status",       "type":"uint8_t", "start": -, "length": 3, "values": "esp32",  "getters": ["hmi", "com"], "comment": "status of the esp32"},
